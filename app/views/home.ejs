
<!DOCTYPE html>
<html lang="en" ng-app="WebMail">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>WebMail-JS</title>

    <!-- Fichers CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
  </head>

  <body ng-controller="HomeCtrl">

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">WebMail-JS</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if(user._id) { %>
            <li><a>Hello, <%= user.google.name %></a></li>
            <li><a href="/logout">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          <h1 class="text-center">Réception des mails</h1>
          <div class="">
            <div ng-repeat="remail in remails" class="well">
              <h3>Email reçu de : {{ remail.from[0].name }}</h3>
              <h3>Objet du mail : {{ remail.subject }}</h3>
              <p>Message : {{ remail.text }}</p>
            </div>
          </div>
        </div> 
        <div class="col-sm-6">
          <h1 class="text-center">Envoyer un mail</h1>
          <div class="well">
            <div>
              <div class="form-group">
                <label>Destinataire</label>
                <select class="form-control" name="to" ng-model="semail.to">
                  <option></option>
                  
                  <option ng-repeat="contact in contacts" value="{{ contact.email }}">{{ contact.email }}</option>
                
                </select>
              </div>

              <div class="form-group">
                <label>Objet</label>
                <input type="text" name="subject" class="form-control" ng-model="semail.subject">
              </div>

              <div class="form-group">
                <label>Message</label>
                <textarea class="form-control" name="text" ng-model="semail.text"></textarea>
              </div>

              <div class="form-group">
                <input type="button" value="Send now!" ng-click="sendMail()" class="btn btn-success btn-block">
              </div>
            </div>
          </div>
        </div>     
      </div>
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">WebMail-JS.</p>
      </div>
    </footer>

    <!-- Fichers JS
    ================================================== -->
    <script src="/js/libs/jquery.min.js"></script>
    <script src="/js/libs/bootstrap.min.js"></script>
    <script src="/js/libs/angular.js"></script>
    <script src="/js/libs/socket.io.js"></script>
    <script src="/js/libs/angular-socket-io.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/controllers/home.controller.js"></script>
  </body>
</html>
